<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/text_vocabulary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_vocabulary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Tungts"
            android:textColor="#0D47A1"
            android:layout_gravity="center"
            android:textSize="30sp"
            style="@style/CommonStyleText"/>

        <ImageView
            android:id="@+id/btn_pronounce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic_max"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:src="@drawable/bear"
            android:id="@+id/image_vocabulary"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"/>

        <RelativeLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/text_answer_header_container"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_pronounce_answer"
                    android:textSize="20sp"
                    style="@style/CommonStyleText"/>

                <TextView
                    android:id="@+id/text_your_pronounce_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    style="@style/CommonStyleText"/>

                <TextView
                    android:id="@+id/text_state_recording"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="16sp"
                    android:text="@string/text_state_record_prepare"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.tupple.robot.common.customview.VisualizerView
                    android:id="@+id/visualizer_view_recording"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="#f0ebdf"
                    android:visibility="visible"/>

                <SeekBar
                    android:id="@+id/seek_bar_audio"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/text_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:text="00:00"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recording_container"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_recording"
                    android:layout_width="@dimen/btn_recording_size"
                    android:layout_height="@dimen/btn_recording_size"
                    android:padding="@dimen/btn_recording_padding"
                    android:background="@drawable/bg_btn_record"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_recording"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>