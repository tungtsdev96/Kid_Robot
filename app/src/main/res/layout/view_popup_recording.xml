<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.android.tupple.robot.wavelineview.WaveLineView
        android:id="@+id/waveline_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:wlvBackgroundColor="@android:color/transparent"
        app:wlvMoveSpeed="250"
        app:wlvLineColor="@color/color2"/>

    <TextView
        android:visibility="visible"
        android:textColor="#FFF"
        android:text="dasdasd"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/text_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>