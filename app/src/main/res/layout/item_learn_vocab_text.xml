<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/common_card_radius"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_pronounce"
        android:src="@drawable/ic_mic_max"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/slide_learning_vocab"
        android:layout_alignStart="@id/slide_learning_vocab"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/text_vocabulary"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_vocab_learning_big"
        style="@style/CommonStyleText" />

</androidx.cardview.widget.CardView>