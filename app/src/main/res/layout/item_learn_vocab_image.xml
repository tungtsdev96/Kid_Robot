<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/common_card_radius">

    <ImageView
        android:id="@+id/btn_pronounce"
        android:src="@drawable/ic_mic_max"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/slide_learning_vocab"
        android:layout_alignStart="@id/slide_learning_vocab"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/image_vocabulary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

</androidx.cardview.widget.CardView>