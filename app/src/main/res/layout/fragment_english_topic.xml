<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kid_background2"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Chủ đề"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_color_entertainment"
        style="@style/CommonStyleText"
        android:textSize="30sp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:src="@drawable/ic_close"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@android:color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:fabSize="mini" />
    <com.android.tupple.robot.common.customview.snaprecycleview.SnapRecycleView
       android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:id="@+id/rcv_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</RelativeLayout>