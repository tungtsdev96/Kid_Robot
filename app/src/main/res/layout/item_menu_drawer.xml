<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/menu_item_padding"
    android:paddingLeft="@dimen/menu_item_padding"
    android:paddingRight="@dimen/menu_item_padding"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/icon_item_menu"
        android:layout_width="@dimen/menu_item_icon"
        android:layout_height="@dimen/menu_item_icon" />

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/boosternextfy_bold"/>

</LinearLayout>